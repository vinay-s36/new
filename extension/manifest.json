{
  "manifest_version": 3,
  "name": "Sanchalak",
  "description": "Helps you to avoid accessing malicious websites by analyzing the website.",
  "version": "1.1",

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "<all_urls>"
  ],

  "permissions": [
    "activeTab"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
